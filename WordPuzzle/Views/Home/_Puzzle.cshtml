@using WordPuzzle.Models
@model PuzzleModel

<table style="width: 100%; height: 100%;">
    @for (int row = 0; row < Model.PuzzleSize; ++row)
    {
    <tr>
        @for (int col = 0; col < Model.PuzzleSize; ++col)
        {
            if (Model.ShowAnswers && Model.PuzzleMatrix[row, col].IsAnswer)
            {
                <td class="puzzle-letter highlighted">@Model.PuzzleMatrix[row, col].PuzzleLetter</td>
            }
            else
            {
                <td class="puzzle-letter">@Model.PuzzleMatrix[row, col].PuzzleLetter</td>
            }
        }
    </tr>
    }
</table>
